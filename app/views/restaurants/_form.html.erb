<% simple_form_for @restaurant do |r| %>
  <%= r.input :name %>
  <%= r.input :address %>
  <%= r.input :phone_number %>
  <%= r.input :category %>
  <%= r.submit class: "btn btn-primary"%>
<% end %>

<%= link_to restaurants_path, class: "btn btn-primary" do %>
  <i class="fa fa-history"></i>
<% end %>
